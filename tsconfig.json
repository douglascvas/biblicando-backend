{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "build",
    "listFiles": true,
    "watch": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "filesGlob": [
    "src/main/**/*.ts",
    "typings/main.d.ts",
    "typings/main/**.ts"
  ],
  "exclude": [
    "typings/browser",
    "typings/browser.d.ts",
    "node_modules/**/*.ts"
  ]
}