{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "sourceMap": true,
    "target": "es2015",
    "module": "commonjs",
    "declaration": false,
    "diagnostics": true,
    "noImplicitAny": false,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "pretty": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.d.ts",
    "./node_modules/@types/**/*.d.ts",
    "./node_modules/node-boot/**/*.d.ts",
    "./node_modules/node-boot/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}